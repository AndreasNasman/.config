# App focus.
rcmd - b: focus-app 'Bitwarden'
rcmd - c: focus-app 'Docker Desktop' # 'c' as in 'containers'.
rcmd - d: focus-app 'DBeaver'
rcmd - f: focus-app 'Finder'
rcmd - g: focus-app 'Google Chrome'
rcmd - i: focus-app 'IntelliJ IDEA CE'
rcmd - k: focus-app 'kitty'
rcmd - m: focus-app 'MuseScore 4'
rcmd - n: focus-app 'Notion'
rcmd - o: focus-app 'Microsoft Outlook'
rcmd - r: focus-app 'Microsoft Remote Desktop'
rcmd - s: focus-app 'System Settings'
rcmd - t: focus-app 'Microsoft Teams'
rcmd - e: focus-app 'Visual Studio Code' # 'e' as in 'editor'.
rcmd - w: focus-app 'Warp'
rcmd - z: focus-app 'zoom.us'

# VPN reconnect.
rcmd - v: reconnect-vpn 'ICT VPN'

# yabai, skhd, and SketchyBar restart.
lalt + rcmd - r: yabai --restart-service && skhd --restart-service && brew services restart sketchybar

# Window focus.
lalt - h: yabai --message window --focus west
lalt - j: yabai --message window --focus south
lalt - k: yabai --message window --focus north
lalt - l: yabai --message window --focus east

# Window movement.
lalt + shift - h: yabai --message window --warp west
lalt + shift - j: yabai --message window --warp south
lalt + shift - k: yabai --message window --warp north
lalt + shift - l: yabai --message window --warp east

# Window sizing and reset.
lalt + ctrl - h: yabai --message window --resize left:-20:0
lalt + ctrl - j: yabai --message window --resize bottom:0:20
lalt + ctrl - k: yabai --message window --resize top:0:-20
lalt + ctrl - l: yabai --message window --resize right:20:0
# Mapped as `lalt - +`.
# https://github.com/koekeishiya/skhd/issues/1
lalt - 0x18: yabai --message space --balance

# Window fullscreen managed toggle and floating setter.
# yabai needs separate arguments, hence the `\n` parts with `echo -e`.
lalt - w: yabai --message window (if test (yabai --message query --windows --window | jq --raw-output '."is-floating"') = 'true'; echo -e '--grid\n1:1:0:0:1:1'; else; echo -e '--toggle\nzoom-fullscreen'; end)

# Window vertical and horizontal splitting toggle.
lalt - s: yabai --message window --toggle split

# Window float toggle.
lalt - t: yabai --message window --toggle float

# Gap toggle.
lalt - g: yabai --message space --toggle gap

# SketchyBar toggle.
lalt - b: if test (yabai --message query --windows --window | jq --raw-output '.frame.y') = '0.0000'; yabai --message config external_bar all:$SKETCHY_BAR_HEIGHT:0; sketchybar --bar hidden=off; else; yabai --message config external_bar all:0:0; sketchybar --bar hidden=on; end

# Window movement between spaces.
lalt + shift - 1: move-window 1
lalt + shift - 2: move-window 2
lalt + shift - 3: move-window 3
lalt + shift - 4: move-window 4
lalt + shift - 5: move-window 5
lalt + shift - 6: move-window 6
lalt + shift - 7: move-window 7
lalt + shift - 8: move-window 8
lalt + shift - 9: move-window 9
lalt + shift - 0: move-window 10

# Display focus.
rcmd - 1: yabai --message display --focus 1
rcmd - 2: yabai --message display --focus 2

# Window movement between displays.
rcmd + shift - 1: yabai --message window --display 1; yabai --message display --focus 1
rcmd + shift - 2: yabai --message window --display 2; yabai --message display --focus 2
