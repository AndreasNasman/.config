# Window focus.
lalt - h: yabai --message window --focus west
lalt - j: yabai --message window --focus south
lalt - k: yabai --message window --focus north
lalt - l: yabai --message window --focus east

# App focus.
rcmd - b: focus-app 'Bitwarden'
rcmd - d: focus-app 'DeepL'
rcmd - e: focus-app 'Visual Studio Code'
rcmd - f: focus-app 'Finder'
rcmd - g: focus-app 'Google Chrome'
rcmd - k: focus-app 'kitty'
rcmd - m: focus-app 'MuseScore 4'
rcmd - o: focus-app 'Microsoft Outlook'
rcmd - r: focus-app 'GarageBand'
rcmd - s: focus-app 'System Settings'
rcmd - t: focus-app 'Microsoft Teams (work or school)'
rcmd - w: focus-app 'Warp'

# Window movement.
lalt + shift - h: yabai --message window --warp west
lalt + shift - j: yabai --message window --warp south
lalt + shift - k: yabai --message window --warp north
lalt + shift - l: yabai --message window --warp east

# Window size.
lalt + ctrl - h: yabai --message window --resize left:-20:0
lalt + ctrl - j: yabai --message window --resize bottom:0:20
lalt + ctrl - k: yabai --message window --resize top:0:-20
lalt + ctrl - l: yabai --message window --resize right:20:0
lalt - 0: yabai --message space --balance

# Window fullscreen zoom toggle and floating window fullscreen size.
lalt - w: yabai --message window --toggle zoom-fullscreen --grid 1:1:0:0:1:1

# Window split type toggle.
lalt - s: yabai --message window --toggle split

# Window gap toggle.
lalt - g: yabai --message space --toggle gap

# SketchyBar toggle.
lalt - b: if [ (yabai --message query --windows --window | jq --raw-output .frame.y) = '0.0000' ]; yabai --message config external_bar all:$SKETCHY_BAR_HEIGHT:0; sketchybar --bar hidden=off; else; yabai --message config external_bar all:0:0; sketchybar --bar hidden=on; end

# Floating window topmost toggle.
lalt - t: yabai --message window --layer (if [ (yabai --message query --windows --window | jq --raw-output .layer) = 'below' ]; echo 'normal'; else; echo 'below'; end)

# Desktop creation and destruction.
lalt - c: yabai --message space --create
lalt - d: yabai --message space --destroy next

# Desktop focus.
# https://superuser.com/a/368036
lalt - 1: switch-desktop 18
lalt - 2: switch-desktop 19
lalt - 3: switch-desktop 20
lalt - 4: switch-desktop 21
lalt - 5: switch-desktop 23
lalt - 6: switch-desktop 22
lalt - 7: switch-desktop 26
lalt - 8: switch-desktop 28
lalt - 9: switch-desktop 25
lalt - tab: yabai --message space --focus recent

# Window movement between desktops.
lalt + shift - 1: yabai --message window --space 1; switch-desktop 18
lalt + shift - 2: yabai --message window --space 2; switch-desktop 19
lalt + shift - 3: yabai --message window --space 3; switch-desktop 20
lalt + shift - 4: yabai --message window --space 4; switch-desktop 21
lalt + shift - 5: yabai --message window --space 5; switch-desktop 23
lalt + shift - 6: yabai --message window --space 6; switch-desktop 22
lalt + shift - 7: yabai --message window --space 7; switch-desktop 26
lalt + shift - 8: yabai --message window --space 8; switch-desktop 28
lalt + shift - 9: yabai --message window --space 9; switch-desktop 25

# Monitor focus.
rcmd - 1: yabai --message display --focus 1
rcmd - 2: yabai --message display --focus 2

# Window movement between monitors.
rcmd + shift - 1: yabai --message window --display 1; yabai --message display --focus 1
rcmd + shift - 2: yabai --message window --display 2; yabai --message display --focus 2

# Restart yabai, skhd, and SketchyBar.
lalt + rcmd - r: yabai --restart-service && skhd --restart-service && brew services restart sketchybar
