# Window focus.
lalt - h : yabai -m window --focus west
lalt - j : yabai -m window --focus south
lalt - k : yabai -m window --focus north
lalt - l : yabai -m window --focus east

# Window movement.
lalt + shift - h : yabai -m window --warp west
lalt + shift - j : yabai -m window --warp south
lalt + shift - k : yabai -m window --warp north
lalt + shift - l : yabai -m window --warp east

# Window size.
lalt + ctrl - h : yabai -m window --resize left:-20:0
lalt + ctrl - j : yabai -m window --resize bottom:0:20
lalt + ctrl - k : yabai -m window --resize top:0:-20
lalt + ctrl - l : yabai -m window --resize right:20:0
lalt - 0 : yabai -m space --balance

# Window fullscreen zoom toggle and floating window fullscreen size.
lalt - w : yabai -m window --toggle zoom-fullscreen --grid 1:1:0:0:1:1

# Window split type toggle.
lalt - s : yabai -m window --toggle split

# Window padding and gap toggle.
lalt - g: echo padding gap | xargs -n1 yabai -m space --toggle

# Floating window topmost toggle.
lalt - t : yabai -m window --toggle topmost

# Desktop creation and destruction.
lalt - c : yabai -m space --create
lalt - d : yabai -m space --destroy last

# Desktop focus.
lalt - 1 : yabai -m space --focus 1
lalt - 2 : yabai -m space --focus 2
lalt - 3 : yabai -m space --focus 3
lalt - 4 : yabai -m space --focus 4
lalt - 5 : yabai -m space --focus 5
lalt - 6 : yabai -m space --focus 6
lalt - 7 : yabai -m space --focus 7
lalt - 8 : yabai -m space --focus 8
lalt - 9 : yabai -m space --focus 9

# Window movement between desktops.
lalt + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1
lalt + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2
lalt + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3
lalt + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4
lalt + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5
lalt + shift - 6 : yabai -m window --space 6; yabai -m space --focus 6
lalt + shift - 7 : yabai -m window --space 7; yabai -m space --focus 7
lalt + shift - 8 : yabai -m window --space 8; yabai -m space --focus 8
lalt + shift - 9 : yabai -m window --space 9; yabai -m space --focus 9

# Monitor focus.
lcmd - 1 : yabai -m display --focus 1
lcmd - 2 : yabai -m display --focus 2

# Window movement between monitors.
lcmd + shift - 1 : yabai -m window --display 1; yabai -m display --focus 1
lcmd + shift - 2 : yabai -m window --display 2; yabai -m display --focus 2
