#!/usr/bin/env fish

yabai --message config \
    external_bar all:$SKETCHY_BAR_HEIGHT:0 \
    layout bsp \
    mouse_follows_focus on \
    window_gap 5 \
    window_origin_display focused

yabai --message rule --add app='^(Activity Monitor|Alfred Preferences|Finder|Microsoft Excel|Microsoft Word|System Settings)$' manage=off
yabai --message rule --add app='^DBeaver' title!='^DBeaver [[:digit:]]+' manage=off
yabai --message rule --add app='^IntelliJ IDEA CE$' title!='( â€“ )' manage=off
yabai --message rule --add app='^Microsoft Outlook$' title!='^(Calendar|Inbox)' manage=off
yabai --message rule --apply
