#!/usr/bin/env fish

# https://trello.com/c/QfYFXbJ7
# yabai --message signal --add event=dock_did_restart action="sudo yabai --load-sa"
# sudo yabai --load-sa

yabai --message config \
    external_bar all:$SKETCHY_BAR_HEIGHT:0 \
    layout bsp \
    mouse_follows_focus on \
    window_gap 5 \
    window_origin_display focused

yabai --message rule --add app!='^(Code|Google Chrome|kitty)$' manage=off
yabai --message rule --apply
