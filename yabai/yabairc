#!/usr/bin/env fish

# https://trello.com/c/QfYFXbJ7
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

set spacing 5
yabai -m config \
    bottom_padding $spacing \
    layout bsp \
    left_padding $spacing \
    mouse_follows_focus on \
    right_padding $spacing \
    top_padding $spacing \
    window_gap $spacing

yabai -m rule --add app!='^(GarageBand|Google Chrome|MuseScore 4|kitty)$' manage=off
